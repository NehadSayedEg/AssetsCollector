<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.assetscollector">
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" /> <!-- For Android 11 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE " />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:hardwareAccelerated="true"
        android:extractNativeLibs="true"
     android:theme="@style/Theme.AssetsCollector"
       >
        <activity
            android:name=".UI.ExportFiles.ExportfilesActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AddAssets.AddAssetsActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AllAssetsActivity.AllAssetsActivity"
            android:exported="false" />
        <activity
            android:name=".UI.FindAsset.FindAssetActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Home.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".AboutWinActivity"
            android:exported="false" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>